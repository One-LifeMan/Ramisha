{
    // - Фикс бага "json ошибка" -
    // "http.proxySupport": "fallback",
    // "json.shemaDownload.enable": true,

    //Вимикає підтвердження під час перетягування та викидання файлів у провіднику
    "explorer.confirmDragAndDrop": false,
    //Вимикає компактний вигляд папок у провіднику проектів
    "explorer.compactFolders": false,
    //Вимикає підсвічування неоднозначних символів Unicode в редакторі коду
    "editor.unicodeHighlight.ambiguousCharacters": false,
    //Вмикає перенесення слова, щоб текст автоматично переносився на новий рядок, якщо він не поміщається в поточному рядку.
    "editor.wordWrap": "off",
    //Встановлює тип миготливості курсору
    "editor.cursorBlinking": "phase",
    //Вмикає миготливість курсору у терміналі.
    "terminal.integrated.cursorBlinking": true,
    // термінал за замовчуванням
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    // шрифт
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.lineHeight": 1.2,
    "debug.console.fontSize": 14,
    "terminal.integrated.fontSize": 12,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "italic font",
                "scope": [
                    "comment",
                    "keyword",
                    "storage",
                    "keyword.control",
                    "keyword.control.from",
                    "keyword.control.flow",
                    "keyword.operator.new",
                    "keyword.control.import",
                    "keyword.control.export",
                    "keyword.control.default",
                    "keyword.control.trycatch",
                    "keyword.control.conditional",
                    "storage.type",
                    "storage.type.class",
                    "storage.modifier.tsx",
                    "storage.type.function",
                    "storage.modifier.async",
                    "variable.language",
                    "variable.language.this",
                    "variable.language.super",
                    "meta.class",
                    "meta.var.expr",
                    "constant.language.null",
                    "support.type.primitive",
                    "entity.name.method.js",
                    "entity.other.attribute-name",
                    "punctuation.definition.comment",
                    "text.html.basic entity.other.attribute-name",
                    "tag.decorator.js entity.name.tag.js",
                    "tag.decorator.js punctuation.definition.tag.js",
                    "source.js constant.other.object.key.js string.unquoted.label.js"
                ],
                "settings": {
                    "fontStyle": "italic"
                }
            }
        ]
    },
    // висота вкладок
    "window.density.editorTabHeight": "default",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.tree.enableStickyScroll": true,
    "workbench.tree.stickyScrollMaxItemCount": 7,
    // автозбереження
    "files.autoSave": "off",
    // відключення зайвих хлібних крихт
    "breadcrumbs.icons": false,
    "breadcrumbs.showKeys": false,
    "breadcrumbs.showFiles": false,
    "breadcrumbs.symbolPath": "off",
    "breadcrumbs.showArrays": false,
    "breadcrumbs.showBooleans": false,
    "breadcrumbs.showClasses": false,
    "breadcrumbs.showConstants": false,
    "breadcrumbs.showConstructors": false,
    "breadcrumbs.showEnumMembers": false,
    "breadcrumbs.showEvents": false,
    "breadcrumbs.showFields": false,
    "breadcrumbs.showEnums": false,
    "breadcrumbs.showFunctions": false,
    "breadcrumbs.showInterfaces": false,
    "breadcrumbs.showMethods": false,
    "breadcrumbs.showModules": false,
    "breadcrumbs.showNamespaces": false,
    "breadcrumbs.showNull": false,
    "breadcrumbs.showNumbers": false,
    "breadcrumbs.showObjects": false,
    "breadcrumbs.showOperators": false,
    "breadcrumbs.showPackages": false,
    "breadcrumbs.showProperties": false,
    "breadcrumbs.showStrings": false,
    "breadcrumbs.showStructs": false,
    "breadcrumbs.showTypeParameters": false,
    "breadcrumbs.showVariables": false,

    // === ПЛАГІНИ ===

    // liveServer - plugin
    "liveServer.settings.CustomBrowser": "brave",
    "liveServer.settings.ChromeDebuggingAttachment": false,
    "liveServer.settings.port": 0,
    // eCSSTractor - plugin
    "ecsstractor_port.bem_nesting": true,
    "ecsstractor_port.element_separator": "__",
    "ecsstractor_port.modifier_separator": "--",
    "ecsstractor_port.empty_line_before_nested_selector": true,
    "ecsstractor_port.add_comment": false,

    // cSpell - plugin
    "cSpell.language": "en,uk",
    "cSpell.ignorePaths": [
        ".vscode/**/*",
        "node_modules",
        "**/.stylelintrc.json",
        "**/.eslintrc.json",
        "**/.prettierignore",
        "**/.prettierrc",
        "**/.stylelintrc.json",
        "**/package-lock.json",
        "**/package.json",
        "**/tsconfig.json",
        "**/.htmlhintrc"
    ],
    "cSpell.userWords": [],
    "cSpell.words": [],

    // ЛІНТЕРИ
    // вимкнути вбудовані в vs code лінтери
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,
    "javascript.validate.enable": false,

    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,

    // prettier
    "prettier.enable": true,
    "prettier.requireConfig": true,
    "prettier.ignorePath": ".prettierignore",
    "prettier.configPath": ".prettierrc",
    "prettier.useEditorConfig": true,
    "prettier.withNodeModules": false,

    // eslint
    "eslint.enable": true,
    "eslint.probe": ["javascript", "typescript"],
    "[javascript]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit"
        }
    },
    "[typescript]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit"
        }
    },

    // stylelint
    "stylelint.enable": true,
    // "scss.lint.emptyRules": "ignore",
    // підсвічує помилки
    "stylelint.validate": ["scss"],
    "[scss]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.stylelint": "explicit"
        }
    },

    "scss.suggestVariables": true
}
